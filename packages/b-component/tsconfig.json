{
  "exclude": [
    "build",
    "tests"
  ],
  "extends": "@evo-tools/compile/config/tsconfig.options.json",
  "include": [
    "src/**/*",
    "types/**/*",
    "typings.d.ts",
    "../../types/**/*",
    "vite.config.mjs"
  ],
  "references": [
    {
      "path": "../utils"
    },
    {
      "path": "../data-store"
    }
  ],
  "compilerOptions": {
    "outDir": "./build",
    "paths": {
      "@/chat/*": [
        "./src/chat/*"
      ],
      "@/markdown-render/*": [
        "./src/markdown-render/*"
      ],
      "@/sortable-list/*": [
        "./src/sortable-list/*"
      ],
      "@evo/component": [
        "./src/component/*"
      ]
    }
  }
}
{
  "name": "evo-chat",
  "version": "0.0.4",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://hevoai.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/evo-family/evo-chat.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --x64 --arm64",
    "build:mac": "electron-vite build && electron-builder --mac --x64 --arm64",
    "build:linux": "electron-vite build && electron-builder --linux --x64 --arm64"
  },
  "build": {
    "electronVersion": "35.0.3",
    "extends": "./electron-builder.yml"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@evo/knowledge-service": "workspace:*",
    "@evo/mcp-service": "workspace:*",
    "@evo/pglite-manager": "workspace:*",
    "@evo/types": "workspace:*",
    "@evo/utils": "workspace:*",
    "@libsql/client": "0.15.1",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@llm-tools/embedjs-interfaces": "^0.1.28",
    "@types/which": "^3.0.4",
    "@types/node": "^22.13.13",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "35.0.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "officeparser": "^5.1.1",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3",
    "vite": "^6.2.3"
  }
}
